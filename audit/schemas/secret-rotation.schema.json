{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["run_id", "secret", "rotation_strategy", "failures", "timing", "post_health"],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "secret": {
      "type": "string"
    },
    "rotation_strategy": {
      "type": "string"
    },
    "failures": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "timing": {
      "type": "object",
      "required": ["started", "ended"],
      "properties": {
        "started": {
          "type": "string",
          "format": "date-time"
        },
        "ended": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "post_health": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["healthy", "unhealthy"]
        }
      }
    }
  }
}